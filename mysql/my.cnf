# =========================================================================
# KONTROLLAPRO - CONFIGURAÇÃO MYSQL PARA PRODUÇÃO
# =========================================================================

[mysqld]
# =====================================================
# CONFIGURAÇÕES BÁSICAS
# =====================================================
bind-address = 0.0.0.0
port = 3306
datadir = /var/lib/mysql
socket = /var/lib/mysql/mysql.sock

# =====================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =====================================================
# InnoDB Buffer Pool (ajustar conforme RAM disponível)
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2

# Query Cache (desabilitado no MySQL 8.0+)
query_cache_type = 0
query_cache_size = 0

# Connections
max_connections = 200
max_connect_errors = 10000
thread_cache_size = 50

# Table Cache
table_open_cache = 2000
table_definition_cache = 1400

# =====================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =====================================================
# Desabilitar carregamento de arquivos locais
local_infile = 0

# Log de consultas lentas
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow.log
long_query_time = 2

# Log de erros
log_error = /var/lib/mysql/error.log

# =====================================================
# CONFIGURAÇÕES DE CHARSET
# =====================================================
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# =====================================================
# CONFIGURAÇÕES DE TIMEOUT
# =====================================================
wait_timeout = 28800
interactive_timeout = 28800
connect_timeout = 10

# =====================================================
# CONFIGURAÇÕES DE BINARY LOGGING
# =====================================================
server_id = 1
log_bin = /var/lib/mysql/mysql-bin.log
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M

# =====================================================
# CONFIGURAÇÕES INNODB
# =====================================================
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 50
innodb_rollback_on_timeout = 1

[mysql]
default_character_set = utf8mb4

[client]
default_character_set = utf8mb4