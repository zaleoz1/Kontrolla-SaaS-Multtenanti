{
  "name": "kontrollapro-saas",
  "version": "1.0.0",
  "description": "Sistema SaaS Multitenanti KontrollaPro",
  "main": "Backend/src/server.js",
  "type": "module",
  "scripts": {
    "start": "cd Backend && npm start",
    "start:prod": "cd Backend && npm run start:prod",
    "start:railway": "cd Backend && npm run start:railway",
    "dev": "concurrently \"cd Backend && npm run dev\" \"cd Frontend && npm run dev\"",
    "build": "cd Frontend && npm run build",
    "install:all": "npm install && cd Backend && npm install && cd ../Frontend && npm install",
    "setup": "cd Backend && npm run setup",
    "migrate": "cd Backend && npm run migrate",
    "seed": "cd Backend && npm run seed",
    "generate-secrets": "node generate-secrets.js",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:shell": "railway shell"
  },
  "keywords": [
    "saas",
    "multitenant",
    "ecommerce",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "KontrollaPro Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}